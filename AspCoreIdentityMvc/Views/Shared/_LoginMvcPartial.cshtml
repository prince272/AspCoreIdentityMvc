@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="IdentityMvc" asp-controller="Manage" asp-action="Index" class="nav-link text-dark" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form asp-area="IdentityMvc" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="form-inline">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="IdentityMvc" asp-controller="Account" asp-action="Register" class="nav-link text-dark">Register</a>
    </li>
    <li class="nav-item">
        <a asp-area="IdentityMvc" asp-controller="Account" asp-action="Login" class="nav-link text-dark">Login</a>
    </li>
}
</ul>